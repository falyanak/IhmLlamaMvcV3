@model IhmLlamaMvc.Mvc.ViewModels.Conversation.ConversationViewModel

<input asp-for="InitialesAgent" type="hidden" />

<div class="left-sidebar-grid">

    <header class="header">
        <div class='grid'>
            <p class="left">SI - DGCCRF </p>
            <span id="headerlabel" class="center">
                Conversation avec LLM
                <select asp-for="ModeleId" asp-items="@Model.listeModeles">
                </select>
            </span>
            <p class="right">Bonjour @Model.IdentiteAgent</p>
        </div>
    </header>

    <main class="main-content">
        <div class="sticky">
            @* <button id="resetButton" type="reset">Réinitialiser</button> *@
            <button id="close-sidebar">
                <img src="~/images/less-than-solid.svg"
                     alt="Replier" height="24" width="24"
                     title="Replier" />
            </button>
            <button id="show-sidebar">
                <img src="~/images/greater-than-solid.svg"
                     alt="Deplier" height="24" width="24"
                     title="Déplier" />
            </button>

            <button id="resetButton">
                <img src="~/images/plus-solid.svg"
                     alt="Nouveau chat" height="24" width="24"
                     title="Nouveau chat" />
            </button>
            
            <partial name="_BusyIndicatorPartial" />

            <button id="buttonload" >
                <i class="fa fa-spinner fa-spin fa-xl"></i>
            </button>
        </div>

        <div id="showQuestionAnswer" class="center"></div>

        <div>
            <partial name="_BusyIndicatorPartial" />
        </div>

        <form class="center" asp-action="PoserQuestion" method="post" id="searchForm" role="form">

            <textarea class="questionclass" asp-for="Question" placeholder="Saisissez votre question ici..."></textarea>
            <span asp-validation-for="Question" class="text-danger"></span>
            <br />

            <button type="submit" id="rechercher">Rechercher</button>
        </form>

    </main>

    <section id="sidebar" class="left-sidebar">

        <ul>
            <li>
                <a href="#">Historique</a>

            </li>
            <li>
                <a href="#">requête 1</a>
            </li>
        </ul>


    </section>
</div>

<div id="mapconversation"
     data-url-soumettre-formulaire-link="@Url.Content("~/Home/PoserQuestion")">
</div>
<script src="~/js/ShowIaprompt.js"></script>

